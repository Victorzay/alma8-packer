{
  "variables": {
    "artifact_description": "AlmaLinix 8.5 with kernel 5.x",
    "artifact_version": "8.5",
    "image_name": "almalinux-8.5"
  },

  "builders": [
    {
      "name": "{{user `image_name`}}",
      "type": "virtualbox-iso",
      "vm_name": "packer-alma-vm",

      "boot_wait": "5s",
      "disk_size": "10240",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",

      "iso_url": "https://mirror.yandex.ru/almalinux/8.5/isos/x86_64/AlmaLinux-8.5-x86_64-minimal.iso",
      "iso_checksum": "fddb5646627aecc572127ecf0b5a3b2b6dd4435f1a1b5ad42013c7fa1bff8ca8",

      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/inst.ks<enter><wait>"
      ],

      "shutdown_command": "sudo -S /sbin/halt -h -p",
      "shutdown_timeout" : "5m",

      "ssh_wait_timeout": "30m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_pty": true,

      "output_directory": "builds",

      "vboxmanage": [
        [  "modifyvm",  "{{.Name}}",  "--memory",  "1024" ],
        [  "modifyvm",  "{{.Name}}",  "--cpus",  "2" ]
      ],

      "export_opts":
      [
        "--manifest",
        "--vsys", "0",
        "--description", "{{user `artifact_description`}}",
        "--version", "{{user `artifact_version`}}"
      ]

    }
  ],

  "post-processors": [
    {
      "output": "almalinux-{{user `artifact_version`}}-kernel-5-x86_64-Minimal.box",
      "compression_level": "7",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "start_retry_timeout": "1m",
      "expect_disconnect": true,
      "pause_before": "20s",
      "override": {
        "{{user `image_name`}}" : {
          "scripts" :
            [
							"scripts/stage-1-kernel-update.sh",
                            "scripts/stage-2-clean.sh"
            ]
        }
      }
    }
  ]
}
